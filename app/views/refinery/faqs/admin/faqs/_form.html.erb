<%= form_for [refinery, :faqs_admin, @faq] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @faq,
              :include_object_name => true %>

  <%= render 'refinery/admin/pages/locale_picker', :current_locale => Globalize.locale if Refinery.i18n_enabled? %>

  <div class='field'>
    <%= f.label :question -%>
    <%= f.text_field :question, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :answer -%>
    <%= f.text_area :answer, :class => 'wymeditor widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.faqs.admin.faqs.faq'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @faq.question) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
